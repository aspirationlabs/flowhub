{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "lib": [
      "ES2024",
      "DOM"
    ],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "typescript/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "chrome"
    ],
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "typescript/**/*.ts",
    "typescript/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "typescript/.next/types/**/*.ts",
    "typescript/.next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
