{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    ".next/",
    "coverage/"
  ],
  "overrides": [
    {
      "files": [
        "typescript/tests/**/*.test.ts",
        "typescript/tests/**/*.test.tsx"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
